            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WorkName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WhenDuration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Equipment)
            </td>
           @* <td>
                @Html.DisplayFor(modelItem => item.WorkStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Season.Id)
            </td>*@
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Muokkaa</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Yksityiskohdat</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Poista</a>
            </td>
        </tr>
}
    </tbody>
</table>

