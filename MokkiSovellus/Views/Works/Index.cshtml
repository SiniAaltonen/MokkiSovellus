<table class="table">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.WorkName)*@
                @Html.DisplayName("Askareen nimi")
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.WhenDuration)*@
